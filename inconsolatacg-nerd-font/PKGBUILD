pkgname=oft-nerd-fonts-inconsolatag-complete-git
pkgver=20180307
pkgrel=1
pkgdesc="Inconsolata (-g) with straight quotes and complete Nerd Fonts."
_github_url="https://github.com/pszynk/PKGBUILDs"
_github_path="master/inconsolata-g-nerd-font"
url="$_github_url/tree/$_github_path"
arch=(any)
license=(custom:OFL)
depends=('fontconfig')
_raw_url="$_github_url/raw/$_github_path"
source=(
"$_raw_url/fonts/InconsolataNerdFontCg.otf"
"$_raw_url/LICENSE"
)
sha256sums=(
'835e10c4c0da8416b0383f83afa121cea299761e9ee2e0b5e707f6e0de01770f'
'38dabe8206e881aa2fd82d4bc58f09447499894e063678135084614fe3e9bfcb'
)


pkgver() {
  date +%Y%m%d
}

package() {
  install -dm0755 ${pkgdir}/usr/share/fonts/OTF
  install -Dm0644 ${srcdir}/*.otf ${pkgdir}/usr/share/fonts/OTF
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
 }

