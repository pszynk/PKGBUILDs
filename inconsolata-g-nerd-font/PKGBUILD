pkgname=ttf-nerd-fonts-inconsolatago-complete-git
pkgver=20180127
pkgrel=1
pkgdesc="Inconsolata with straight quotes."
_github_url="https://github.com/pszynk/PKGBUILDs"
_github_path="master/inconsolata-g-nerd-font"
url="$_github_url/tree/$_github_path"
arch=(any)
license=(custom:OFL)
depends=('fontconfig')
_raw_url="$_github_url/raw/$_github_path"
source=(
"$_raw_url/InconsolataNerdFontComplete-g.ttf"
"$_raw_url/LICENSE"
)
sha256sums=(
'acf8c9fa9b15a51801be003c7eb0a55c8530fe9c93c42a2deeba775f10b64fa3'
'38dabe8206e881aa2fd82d4bc58f09447499894e063678135084614fe3e9bfcb'
)


pkgver() {
  date +%Y%m%d
}

package() {
  install -dm0755 ${pkgdir}/usr/share/fonts/TTF
  install -Dm0644 ${srcdir}/*.ttf ${pkgdir}/usr/share/fonts/TTF
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
 }

